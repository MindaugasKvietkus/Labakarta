{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="col-md-5" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">Mano paskyra</label>
        </div>
        {{ form_start(form) }}
        <div class="form-group col-md-4" style="border: 1px solid;">
            <label class="col-md-12"><img src={{ picture }}  class="img-responsive"></label>
            <label class="col-md-12"><a href="/admin/user/edit/image/{{ id }}">Keisti nuotraukÄ…</a></label>

        </div>
        <div class="form-group col-md-8" style="border: 1px solid;">

            <label class="col-md-12">{{ form_label(form.name_surname) }}</label>
            <label class="col-md-12">{{ form_widget(form.name_surname) }}</label>
            <label class="col-md-12">{{ form_label(form.email) }}</label>
            <label class="col-md-12">{{ form_widget(form.email) }}</label>
            <label class="col-md-12">{{ form_label(form.old_password) }}</label>
            <label class="col-md-12">{{ form_widget(form.old_password) }}</label>
            <label class="col-md-12">{{ form_label(form.new_password) }}</label>
            <label class="col-md-12">{{ form_widget(form.new_password) }}</label>
        </div>
        <div>
            <label class="col-md-12" >{{ form_widget(form.naujinti) }}</label>
        </div>
        <div style="display: none">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
        <div class="col-md-12">
            <label><a href={{ path("admin_user_list") }}>Atgal</a></label>
        </div>
    </div>
{% endblock %}
