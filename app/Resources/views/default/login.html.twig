{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="col-md-3" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">Prisijungti</label>
            <label class="col-md-12" style="text-align: center">Facebook prisijungima</label>
            <label class="col-md-12" style="text-align: center">- arba -</label>
        </div>
        {{ form_start(form) }}
        <div class="form-group">
            <label class="col-md-12">{{ form_label(form.email) }}</label>
            <label class="col-md-12">{{ form_widget(form.email) }}</label>
        </div>
        <div class="form-group">
            <label class="col-md-12">{{ form_label(form.password) }}</label>
            <label class="col-md-12">{{ form_widget(form.password) }}</label>
        </div>
        <div>
            <label class="col-md-12" >{{ form_widget(form.login) }}</label>
        </div>
        <div style="display: none">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
        <div>
            <label><a href={{ path('remember_password') }}>Priminti slaptažodį</a></label>
        </div>
        <div>
            <label class="col-md-12" style="text-align: center">- Dar nesate užsiregistravę? -</label>
        </div>
        <div>
            <label><button href="#" class="btn btn-default">REGISRUOTIS</button></label>
        </div>
    </div>
{% endblock %}
