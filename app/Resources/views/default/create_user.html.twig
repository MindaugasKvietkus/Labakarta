{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="col-md-3" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div class="form-group">
            <label class="col-md-12" style="text-align: center">Registruotis</label>
            <label class="col-md-12" style="text-align: center">REGISTRUOTIS SU FACEBOOK</label>
            <label class="col-md-12" style="text-align: center">- arba -</label>
        </div>
        {{ form_start(form) }}
        <div class="form-group">
            <label class="col-md-12">{{ form_label(form.name_surname) }}</label>
            <label class="col-md-12">{{ form_widget(form.name_surname) }}</label>
        </div>
        <div class="form-group">
            <label class="col-md-12">{{ form_label(form.email) }}</label>
            <label class="col-md-12">{{ form_widget(form.email) }}</label>
        </div>
        <div class="form-group">
            <label class="col-md-12">{{ form_widget(form.password) }}</label>
        </div>
        <div>
            <label>{{ form_widget(form.register) }}</label>
        </div>
        <div style="display: none">
            {{ form_rest(form) }}
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}